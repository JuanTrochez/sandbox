extends ../layout

block content
	a(href="/users") Back to users

	p Send a message
	form(method="POST" action="/message/send")
		select(name="user")
			each data in user
				each users in listUser
					each current in currentUser
						if current.id != users.id
							if users.id == data.id
								option(value=users.id, selected="selected") #{users.firstname}
							else
								option(value=users.id) #{users.firstname}
		p
			input(type="text", name="object" value=post.object)
		p
			textarea(name="content") #{post.content}
		p
			button(type="submit") Send

	if (messages.info)
		span= messages.info[0]


	p
		a(href="/logout") logout
